<?xml version="1.0" encoding="UTF-8"?>
<!-- Definition of new Model -->
<model name="noindex:noindexmodel" xmlns="http://www.alfresco.org/model/dictionary/1.0">
    
    <description>Noindex content model</description>
    <author>Redpill-Linpro, Ole Lykke Jacobsen</author>
    <version>1.0</version>

    <imports>
        <!-- Import Alfresco Dictionary Definitions -->
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d" />
        <!-- Import Alfresco Content Domain Model Definitions -->
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm" />
    </imports>
    
    <!-- create the Noindex namespace -->
    <namespaces>
        <namespace uri="http://www.alfresco.com/model/noindex/1.0" prefix="noindex" />
    </namespaces>

    <aspects>
    	<!-- applied when a folder/document should not be indexed -->
        <aspect name="noindex:applied">
            <title>Do not index</title>
        </aspect>
    </aspects>
</model>